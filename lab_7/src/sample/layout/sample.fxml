<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane prefWidth="720.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints prefHeight="80" />
    <RowConstraints prefHeight="640" />
    <RowConstraints prefHeight="60" />
  </rowConstraints>

  <children>
    <GridPane hgap="8.0" style="-fx-background-color: #343434;" vgap="8.0">
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      </columnConstraints>
      <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      </rowConstraints>
      <children>
        <Label fx:id="playerNumberLabel" textFill="WHITE" GridPane.columnIndex="0" />
        <Button fx:id="startButton" mnemonicParsing="false" text="Start" GridPane.columnIndex="2" />
        <TextField GridPane.columnIndex="1" fx:id="playersTextField"/>
        <Label fx:id="gameTimeLabel" textFill="WHITE" GridPane.columnIndex="3" />
      </children>
      <padding>
        <Insets bottom="24.0" left="12.0" right="12.0" top="24.0" />
      </padding>
    </GridPane>

    <Canvas fx:id="canvas" height="700" width="1440" GridPane.rowIndex="1" />


  </children>
</GridPane>
